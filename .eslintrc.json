{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["plugin:react/recommended", "standard-with-typescript"],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": ["bases/tsconfig.json"]
  },
  "plugins": ["react"],
  "rules": {
    "quotes": ["error", "double"],
    "semi": "off",
    "@typescript-eslint/semi": ["error", "always"]
  }
}
